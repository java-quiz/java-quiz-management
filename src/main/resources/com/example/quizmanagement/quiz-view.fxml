<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<VBox xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" prefHeight="577.0" prefWidth="403.0"
      xmlns="http://javafx.com/javafx/11.0.14-internal" fx:controller="com.example.quizmanagement.QuizController">
	<VBox fx:id="quizBox" alignment="TOP_CENTER" prefHeight="250.0">
		<Label fx:id="question" textAlignment="CENTER">
			<font>
				<Font name="System Bold" size="20.0"/>
			</font>
			<VBox.margin>
				<Insets bottom="30.0" top="20.0"/>
			</VBox.margin>
		</Label>
		<HBox fx:id="opBox1" prefWidth="50.0">
			<VBox.margin>
				<Insets left="50.0" right="50.0" top="30.0"/>
			</VBox.margin>
		</HBox>
		<HBox fx:id="opBox2" prefWidth="50.0">
			<VBox.margin>
				<Insets left="50.0" right="50.0" top="30.0"/>
			</VBox.margin>
		</HBox>
		<VBox.margin>
			<Insets bottom="5.0" left="30.0" right="30.0" top="30.0"/>
		</VBox.margin>
	</VBox>
	<VBox alignment="CENTER">
		<VBox.margin>
			<Insets bottom="20.0" left="30" right="30"/>
		</VBox.margin>
		<GridPane fx:id="optionBox" hgap="10.0" vgap="10.0">
			<columnConstraints>
				<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
				<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
			</columnConstraints>
			<rowConstraints>
				<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
				<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
			</rowConstraints>
			<opaqueInsets>
				<Insets/>
			</opaqueInsets>
		</GridPane>
		<Label fx:id="report" style="-fx-text-fill: red;"/>
	</VBox>
	<HBox alignment="BOTTOM_CENTER" prefHeight="100.0" prefWidth="200.0">
		<Button id="blue-button" fx:id="goBack" mnemonicParsing="false" onAction="#onClickGoBack" text="Exit">
			<HBox.margin>
				<Insets left="10.0" right="10.0"/>
			</HBox.margin>
		</Button>
		<Button id="purple-button" fx:id="nextButton" mnemonicParsing="false" onAction="#onClickStart" text="Next">
			<HBox.margin>
				<Insets left="10.0" right="10.0"/>
			</HBox.margin>
		</Button>
		<VBox.margin>
			<Insets bottom="30.0" top="30.0"/>
		</VBox.margin>
	</HBox>
	<VBox alignment="BOTTOM_CENTER">
		<children>
			<ProgressBar fx:id="pb" prefHeight="10.0" prefWidth="200.0" progress="0.0" style="-fx-accent: #6c63ff;"/>
		</children>
		<VBox.margin>
			<Insets/>
		</VBox.margin>
	</VBox>
</VBox>
