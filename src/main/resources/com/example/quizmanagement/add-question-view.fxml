<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="662.0" prefWidth="843.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.quizmanagement.AddQuestionController">
   <children>
      <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../img/quiz.png" />
         </image></ImageView>
     <Label text="Ask your question?">
       <VBox.margin>
         <Insets bottom="5.0" top="30.0" />
       </VBox.margin>
     </Label>
     <TextArea prefHeight="100.0" prefWidth="200.0" >
       <VBox.margin>
         <Insets left="30.0" right="30.0" />
       </VBox.margin>
     </TextArea>
     <Label text="Give the options">
       <VBox.margin>
         <Insets top="30.0" />
       </VBox.margin>
     </Label>
     <GridPane prefHeight="61.0" prefWidth="600.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
