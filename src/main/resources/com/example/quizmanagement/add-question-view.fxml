<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity"
      minHeight="-Infinity"
      minWidth="-Infinity" prefHeight="662.0" prefWidth="843.0" xmlns="http://javafx.com/javafx/16"
      fx:controller="com.example.quizmanagement.AddQuestionController">
	<children>
		<ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
			<image>
				<Image url="@../../../img/quiz.png"/>
			</image>
		</ImageView>
		<Label text="Ask your question?">
			<VBox.margin>
				<Insets bottom="5.0" top="30.0"/>
			</VBox.margin>
		</Label>
		<TextArea fx:id="question" prefHeight="100.0" prefWidth="200.0">
			<VBox.margin>
				<Insets left="30.0" right="30.0"/>
			</VBox.margin>
		</TextArea>
		<Label text="Give the options">
			<VBox.margin>
				<Insets top="30.0"/>
			</VBox.margin>
		</Label>
		<GridPane prefHeight="61.0" prefWidth="600.0">
			<columnConstraints>
				<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
				<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
			</columnConstraints>
			<rowConstraints>
				<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
				<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
			</rowConstraints>
			<VBox.margin>
				<Insets left="30.0" right="30.0" top="10.0"/>
			</VBox.margin>
			<children>
				<TextField fx:id="op1" promptText="Option 1">
					<GridPane.margin>
						<Insets right="5.0"/>
					</GridPane.margin>
				</TextField>
				<TextField fx:id="op2" promptText="Option 3" GridPane.rowIndex="1">
					<GridPane.margin>
						<Insets right="5.0"/>
					</GridPane.margin>
				</TextField>
				<TextField fx:id="op3" promptText="Option 2" GridPane.columnIndex="1">
					<GridPane.margin>
						<Insets left="5.0"/>
					</GridPane.margin>
				</TextField>
				<TextField fx:id="op4" promptText="Option 4" GridPane.columnIndex="1" GridPane.rowIndex="1">
					<GridPane.margin>
						<Insets left="5.0"/>
					</GridPane.margin>
				</TextField>
			</children>
		</GridPane>
		<Label fx:id="clickText"/>
		<TextField alignment="CENTER" fx:id="cro" promptText="Correct option">
			<VBox.margin>
				<Insets left="90.0" right="90.0"/>
			</VBox.margin>
		</TextField>
		<HBox alignment="BOTTOM_CENTER" prefHeight="100.0" prefWidth="200.0">
			<children>
				<Button fx:id="goBack" mnemonicParsing="false" onAction="#onClickGoBack" text="Go back"/>
				<Button fx:id="submit" mnemonicParsing="false" onAction="#onClickSubmit" text="Submit"/>
			</children>
		</HBox>
	</children>
</VBox>
