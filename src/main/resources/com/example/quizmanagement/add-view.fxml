<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.text.Font?>
<VBox xmlns:fx="http://javafx.com/fxml/1" alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity"
      minHeight="-Infinity"
      minWidth="-Infinity" prefHeight="662.0" prefWidth="843.0"
      xmlns="http://javafx.com/javafx/11.0.14-internal"
      fx:controller="com.example.quizmanagement.AddQuestionController">
	<children>
		<Label fx:id="username" textAlignment="CENTER">
			<VBox.margin>
				<Insets top="20.0"/>
			</VBox.margin>
			<font>
				<Font name="Hack Bold Italic" size="30.0"/>
			</font>
			<effect>
				<Glow/>
			</effect>
			<textFill>
				<LinearGradient endX="1.0" endY="1.0">
					<stops>
						<Stop>
							<color>
								<Color red="0.9803921580314636" green="0.43529412150382996" blue="0.4000000059604645"/>
							</color>
						</Stop>
						<Stop offset="1.0">
							<color>
								<Color red="0.42352941632270813" green="0.38823530077934265" blue="1.0"/>
							</color>
						</Stop>
					</stops>
				</LinearGradient>
			</textFill>

		</Label>
		<VBox fx:id="container" alignment="CENTER" minHeight="450.0">
			<Label text="Ask your question?">
				<VBox.margin>
					<Insets bottom="5.0" top="30.0"/>
				</VBox.margin>
			</Label>
			<TextArea fx:id="question" prefHeight="100.0" prefWidth="200.0">
				<VBox.margin>
					<Insets left="30.0" right="30.0"/>
				</VBox.margin>
			</TextArea>
			<Label text="Give the options">
				<VBox.margin>
					<Insets top="30.0"/>
				</VBox.margin>
			</Label>
			<GridPane prefHeight="61.0" prefWidth="600.0">
				<columnConstraints>
					<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
					<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
				</columnConstraints>
				<rowConstraints>
					<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
					<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
				</rowConstraints>
				<VBox.margin>
					<Insets left="30.0" right="30.0" top="10.0"/>
				</VBox.margin>
				<children>
					<TextField fx:id="op1" promptText="Option 1">
						<GridPane.margin>
							<Insets right="5.0"/>
						</GridPane.margin>
					</TextField>
					<TextField fx:id="op2" promptText="Option 3" GridPane.rowIndex="1">
						<GridPane.margin>
							<Insets right="5.0"/>
						</GridPane.margin>
					</TextField>
					<TextField fx:id="op3" promptText="Option 2" GridPane.columnIndex="1">
						<GridPane.margin>
							<Insets left="5.0"/>
						</GridPane.margin>
					</TextField>
					<TextField fx:id="op4" promptText="Option 4" GridPane.columnIndex="1" GridPane.rowIndex="1">
						<GridPane.margin>
							<Insets left="5.0"/>
						</GridPane.margin>
					</TextField>
				</children>
			</GridPane>
			<Label fx:id="clickText"/>
			<TextField fx:id="cro" alignment="CENTER" promptText="Correct option">
				<VBox.margin>
					<Insets left="90.0" right="90.0"/>
				</VBox.margin>
			</TextField>
			<Label fx:id="error" textFill="red">
				<VBox.margin>
					<Insets top="20.0"/>
				</VBox.margin>
			</Label>
			<HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
				<children>
					<VBox>
						<Button id="purple-button" fx:id="goBack" mnemonicParsing="false" onAction="#onClickGoBack" text="Go back">
							<VBox.margin>
								<Insets right="5.0"/>
							</VBox.margin>
						</Button>
					</VBox>
					<VBox>
						<Button id="blue-button" mnemonicParsing="false" onAction="#onClickSubmit" text="Submit">
							<VBox.margin>
								<Insets left="5.0"/>
							</VBox.margin>
						</Button>
					</VBox>
				</children>
			</HBox>
		</VBox>
	</children>
</VBox>
