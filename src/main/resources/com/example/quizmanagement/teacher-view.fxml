<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.text.Font?>
<VBox xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" prefHeight="589.0" prefWidth="788.0"
      spacing="20.0" xmlns="http://javafx.com/javafx/11.0.14-internal"
      fx:controller="com.example.quizmanagement.MainController">
	<padding>
		<Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
	</padding>
	<Label fx:id="wcLbl">
		<font>
			<Font name="Hack Italic" size="36.0"/>
		</font>
		<textFill>
			<RadialGradient centerX="0.5" centerY="0.5" radius="0.5">
				<stops>
					<Stop>
						<color>
							<Color red="0.9803921580314636" green="0.43529412150382996" blue="0.4000000059604645"/>
						</color>
					</Stop>
					<Stop offset="1.0">
						<color>
							<Color red="0.42352941632270813" green="0.38823530077934265" blue="1.0"/>
						</color>
					</Stop>
				</stops>
			</RadialGradient>
		</textFill>
	</Label>
	<ImageView fitHeight="282.0" fitWidth="356.0" pickOnBounds="true">
		<image>
			<Image url="@../../../img/quiz.png"/>
		</image>
	</ImageView>
	<GridPane alignment="CENTER">
		<columnConstraints>
			<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
			<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
		</columnConstraints>
		<rowConstraints>
			<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
			<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
		</rowConstraints>
	</GridPane>
	<HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
		<children>

			<Button id="blue-button" fx:id="testButton" onAction="#onClickFullReportButton" text="Full report"
			        wrapText="true">
				<HBox.margin>
					<Insets right="5.0"/>
				</HBox.margin>
			</Button>
			<Button id="purple-button" fx:id="addButton" onAction="#onClickAddButton" text="Questions" wrapText="true">
				<HBox.margin>
					<Insets left="5.0"/>
				</HBox.margin>
			</Button>
		</children>
	</HBox>
	<HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
		<children>
			<Button id="green-button" mnemonicParsing="false" onAction="#onClickAccButton" text="New account" wrapText="true">
				<HBox.margin>
					<Insets right="5.0"/>
				</HBox.margin>
			</Button>
			<Button id="red-button" mnemonicParsing="false" onAction="#onLogout" text="Logout" wrapText="true">
				<HBox.margin>
					<Insets left="5.0"/>
				</HBox.margin>
			</Button>
		</children>
	</HBox>
</VBox>
